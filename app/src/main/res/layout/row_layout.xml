<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardViewID">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/travel_destinationTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="10dp"
                android:text="Travel Destination: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fromDate_TV"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/travel_destinationTV"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="From : " />

            <TextView
                android:id="@+id/toDate_TV"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/travel_destinationTV"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:padding="10dp"
                android:text="To : "
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:gravity="center"/>

            <TextView
                android:id="@+id/estimated_budgetTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fromDate_TV"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Est Budget: "
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>